{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowJs": false,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "preserveSymlinks": true,
    "jsx": "react-jsx",
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "lib": ["dom", "esnext"],
    "paths": {
      "@rhf-kit/mui": ["./packages/rhf-kit-mui/src"],
      "@rhf-kit/mui/*": ["./packages/rhf-kit-mui/src/*"]
    },
    "types": ["node", "react"]
  },
  "exclude": ["**/test", "**/dist", "**/types", "**/__tests__"],
  "include": ["src/**/*"]
}
